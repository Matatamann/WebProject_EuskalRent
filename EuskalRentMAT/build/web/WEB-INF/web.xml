<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <!-- Declaracion -->
    <servlet>
        <servlet-name>logear</servlet-name>
        <servlet-class>Controlador.logear</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>Controlador.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>insertUser</servlet-name>
        <servlet-class>Controlador.insertUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateUser</servlet-name>
        <servlet-class>Controlador.updateUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>buscarAloj</servlet-name>
        <servlet-class>Controlador.buscarAloj</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistroAloj</servlet-name>
        <servlet-class>Controlador.RegistroAloj</servlet-class>
    </servlet>
    <!-- FIN_declaracion -->
    <!-- Mapeado -->
    <servlet>
        <servlet-name>RegistroReserva</servlet-name>
        <servlet-class>Controlador.RegistroReserva</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logear</servlet-name>
        <url-pattern>/logear</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>insertUser</servlet-name>
        <url-pattern>/insertUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateUser</servlet-name>
        <url-pattern>/updateUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>buscarAloj</servlet-name>
        <url-pattern>/buscarAloj</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistroAloj</servlet-name>
        <url-pattern>/RegistroAloj</url-pattern>
    </servlet-mapping>
    <!-- FIN_Mapeado -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <!-- Base de datos -->
    <resource-ref>
        <description>Pool conexiones MySQL</description>
        <res-ref-name>jdbc/ConexionMySQL</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <!-- FIN_Base de datos -->
    <servlet-mapping>
        <servlet-name>RegistroReserva</servlet-name>
        <url-pattern>/RegistroReserva</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
